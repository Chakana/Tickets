@model TNT.Models.Compra

@{
    ViewBag.Title = "PagoManualDeuda";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h2>PagoManualDeuda</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            <legend>Pago Manual</legend>

            @Html.HiddenFor(model => model.id)

            @Html.HiddenFor(model => model.fecha_compra)
            @Html.HiddenFor(model => model.id_usuario_compra)
            <div class="editor-label">
                @Html.LabelFor(model => model.codigo_recaudacion)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.codigo_recaudacion)
                @Html.ValidationMessageFor(model => model.codigo_recaudacion)
            </div>
            @Html.HiddenFor(model => model.pagado)
            @Html.HiddenFor(model => model.fecha_pago)

            <div class="editor-label">
                @Html.LabelFor(model => model.monto_cobrar)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.monto_cobrar)
                @Html.ValidationMessageFor(model => model.monto_cobrar)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.numero_factura)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.numero_factura)
                @Html.ValidationMessageFor(model => model.numero_factura)
            </div>

            <p>
                <input type="submit" value="Pagar" />
            </p>
        </fieldset>
    }

    <div>
        @Html.ActionLink("Volver ", "SimuladorPago")
    </div>
</div class="container">

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
