@model IEnumerable<TNT.Models.Empresas>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <h1>EMPRESAS <small>Listado general</small></h1>
</div>
<p>
    @Html.ActionLink("Crear nueva Empresa", "Create", new { id = 1 }, htmlAttributes: new { @class = "btn btn-success" })
</p>
<input id="search" placeholder="Buscar..." />
<table class="table table-hover">
    <tr>
        <th>
            Nombre
        </th>
        <th>
            NIT
        </th>
        <th>
            Direccion
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fecha_registro)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.departamento)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr data-state="lugar">
        <td>
            @Html.DisplayFor(modelItem => item.nombre_empresa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.direccion)
        </td>
        <td>
            @item.fecha_registro.Value.ToString("yyyy-MM-dd hh:mm:ss", System.Globalization.CultureInfo.InvariantCulture)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.departamento)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.id }, htmlAttributes: new { @class = "btn btn-success" })
            @Html.ActionLink("Borrar", "Delete", new { id = item.id }, htmlAttributes: new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
<script>
    $("input#search").keyup(function () {
        var filter = $(this).val();
        var regExPattern = "gi";
        var regEx = new RegExp(filter, regExPattern);
        $("table tr").each(function () {
            if ($(this).data('state'))
                if (
                    $(this).text().search(new RegExp(filter, "i")) < 0
                    && $(this).data('state').search(regEx) < 0
                ) {
                    $(this).hide();
                } else {
                    $(this).show();
                }
        });
    });
</script>