@{
    ViewBag.Title = "Landing Empresas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .tales {
  width: 100%;
}
.carousel-inner{
  width:100%;
  
}
</style>
<!-- Carousel
    ================================================== -->
<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img class="first-slide" src="data:image/gif;base64,R0lGODlhAQABAIAAAHd3dwAAACH5BAAAAAAALAAAAAABAAEAAAICRAEAOw==" alt="First slide">
            <div class="container">
                <div class="jumbotron">
                    <h1>Bienvenido a la empresa @ViewBag.NombreEmpresa</h1>
                    <p>Desde esta pagina puede gestionar eventos, crear sectores de eventos </p>
                    <p>Ver Tickets reservados y comprados en un solo clic.</p>
                    <p>
                        <a class="btn btn-lg btn-primary" href="#" role="button">Ver Ayuda &raquo;</a>
                    </p>
                </div>
            </div> <!-- /container -->
        </div>
        <div class="item">
            <img class="second-slide" src="data:image/gif;base64,R0lGODlhAQABAIAAAHd3dwAAACH5BAAAAAAALAAAAAABAAEAAAICRAEAOw==" alt="Second slide">
            <div class="container">
                <div class="jumbotron">
                    <h1>Eventos</h1>
                    <p>Gestione eventos, revise eventos pasados y futuros </p>
                    <p>
                        @Html.ActionLink("Evento", "Index", "Event", new { id = 1 }, htmlAttributes: new { @class = "btn btn-lg btn-primary" })
                    </p>
                </div>
            </div> <!-- /container -->
        </div>
        <div class="item">
            <img class="third-slide" src="data:image/gif;base64,R0lGODlhAQABAIAAAHd3dwAAACH5BAAAAAAALAAAAAABAAEAAAICRAEAOw==" alt="Third slide">
            <div class="container">
                <div class="jumbotron">
                    <h1>Tickets</h1>
                    <p>Revise Tickets reservados y comprados para sus eventos</p>
                    <p>
                        @Html.ActionLink("Tickets", "Index", "Ticket", new { id = 1 }, htmlAttributes: new { @class = "btn btn-lg btn-primary" })
                    </p>
                </div>
            </div> <!-- /container -->
        </div>
        <div class="item">
            <img class="third-slide" src="data:image/gif;base64,R0lGODlhAQABAIAAAHd3dwAAACH5BAAAAAAALAAAAAABAAEAAAICRAEAOw==" alt="Fourth slide">
            <div class="container">
                <div class="jumbotron">
                    <h1>Lugares de Eventos</h1>
                    <p>Tiene algun local de eventos que quiere registrar? hagalo aca o elijalo de nuestra lista</p>
                    <p>
                        @Html.ActionLink("Lugares", "Index", "Lugar", new { id = 1 }, htmlAttributes: new { @class = "btn btn-lg btn-primary" })
                    </p>
                </div>
            </div> <!-- /container -->
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div><!-- /.carousel -->
