@model TNT.Models.comisiones

@{
    ViewBag.Title = "Edit";
}

<h2>Editar Comision</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>comisiones</legend>

        @Html.HiddenFor(model => model.id)
        @Html.HiddenFor(model => model.id_empresa)
        <div class="editor-label">
            @Html.LabelFor(model => model.rango_inferior)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.rango_inferior)
            @Html.ValidationMessageFor(model => model.rango_inferior)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.rango_superior)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.rango_superior)
            @Html.ValidationMessageFor(model => model.rango_superior)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.monto_comision)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.monto_comision)
            @Html.ValidationMessageFor(model => model.monto_comision)
        </div>

        <p>
            <input type="submit" value="Grabar" class="btn btn-primary" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Volver a la lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
