@model IEnumerable<TNT.Models.Eventos>

@{
    ViewBag.Title = "Index";
}
<div class="page-header">
    <h1>EVENTOS <small>Listado completo de eventos</small></h1>
</div>

<div class="container">
        <div class="row">
        <br />
        <br />
        <p>
            @Html.ActionLink("Crear Evento", "Create", new { id = 1 }, htmlAttributes: new { @class = "btn btn-success" })
        </p>
        <h3>Eventos habilitados</h3>
        <table class="table table-hover">
            <tr>
                <th>
                    Nombre Evento
                </th>
                <th>
                    Lugar
                </th>
                <th>
                    Fecha Evento
                </th>
                <th>
                    Hora Evento
                </th>
                <th>
                    Empresa
                </th>
                <th>
                    Tipo de Evento
                </th>
                <th>Acciones</th>
                <th>Tickets</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.nombre_evento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Lugares.nombre_lugar)
                    </td>
                    <td>
                        @item.fecha_evento.ToString("yyyy-MM-dd")
                    </td>
                    <td>
                        @item.hora_evento

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Empresas.nombre_empresa)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tipos_evento.descripcion)
                    </td>
                    <td>
                        <a href=@Url.Action("Edit", new { id = item.id }) data-toggle="tooltip" title="Editar">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </a>
                        <a href=@Url.Action("Delete", new { id = item.id }) data-toggle="tooltip" title="Borrar">
                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                        </a>
                    </td>
                    <td>
                        <a href=@Url.Action("TicketsEventoReservados", "Ticket", new { id = item.id }) data-toggle="tooltip" title="Reservados">
                            <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>
                        </a>
                        <a href=@Url.Action("TicketsEventoComprados", "Ticket", new { id = item.id }) data-toggle="tooltip" title="Comprados">
                            <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span>
                        </a>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>


<script>
    $("input#search").keyup(function () {
        var filter = $(this).val();
        var regExPattern = "gi";
        var regEx = new RegExp(filter, regExPattern);
        $("table tr").each(function () {
            if ($(this).data('state'))
                if (
                    $(this).text().search(new RegExp(filter, "i")) < 0
                    && $(this).data('state').search(regEx) < 0
                ) {
                    $(this).hide();
                } else {
                    $(this).show();
                }
        });
    });
</script>


